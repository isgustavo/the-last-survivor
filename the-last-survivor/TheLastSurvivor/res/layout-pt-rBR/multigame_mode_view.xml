<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:lht="http://schemas.android.com/apk/res/br.com.thelastsurvivor"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
<br.com.thelastsurvivor.view.BackgroundView
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:id="@+id/surfaceView" /> 
					  
<FrameLayout android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    
           <AbsoluteLayout 
    			android:orientation="vertical"
    			android:layout_width="fill_parent"
    			android:layout_height="fill_parent">
    		
    			<br.com.thelastsurvivor.util.FT2FontTextView 
						android:id="@+id/app_name" android:text="@string/app_first_name" 
						android:textSize="24dp" android:textColor="@android:color/white"
						android:layout_width="fill_parent" android:layout_height="wrap_content" lht:ttf_name="FT2FONT.TTF"
						android:layout_x="6dp" android:layout_y="10dp">
			 	</br.com.thelastsurvivor.util.FT2FontTextView>
			 	<br.com.thelastsurvivor.util.FT2FontTextView 
						android:id="@+id/app_name" android:text="@string/app_last_name" 
						android:textSize="24dp" android:textColor="@android:color/white"
						android:layout_width="fill_parent" android:layout_height="wrap_content" lht:ttf_name="FT2FONT.TTF"
						android:layout_x="6dp" android:layout_y="34dp">
			 	</br.com.thelastsurvivor.util.FT2FontTextView>
    			<br.com.thelastsurvivor.util.FT2FontTextView 
	   				android:id="@+id/user_name"  android:text="@string/multiplayer" 
	   				android:textSize="20dp" android:textColor="#44A2AA"
	   				android:layout_width="fill_parent" android:layout_height="wrap_content" lht:ttf_name="FT2FONT.TTF"
	   				android:layout_x="270dp" android:layout_y="20dp">
    			</br.com.thelastsurvivor.util.FT2FontTextView>
    		
				
				<br.com.thelastsurvivor.util.FT2FontTextView 
						android:id="@+id/app_name" android:text="@string/multiplayer_mode_1" 
						android:textSize="15dp" android:textColor="@android:color/white"
						android:layout_width="fill_parent" android:layout_height="wrap_content" lht:ttf_name="FT2FONT.TTF"
						android:layout_x="25dp" android:layout_y="70dp">
			 	</br.com.thelastsurvivor.util.FT2FontTextView>
			 	
				
				
				<Button android:layout_height="wrap_content" 
			      		android:layout_width="wrap_content"
			      		android:background="@drawable/server_image" 
			      		android:id="@+id/server_image"
			      		android:layout_x="40dp" android:layout_y="180dp">
			    </Button>
			    <Button android:layout_height="wrap_content" 
			      		android:layout_width="wrap_content"
			      		android:background="@drawable/cliente_image" 
			      		android:id="@+id/client_image"
			      		android:layout_x="250dp" android:layout_y="180dp">
			    </Button>
			    
			    <Button android:layout_height="wrap_content" 
			      		android:layout_width="wrap_content"
			      		android:text="GO"
			      		android:id="@+id/go"
			      		android:layout_x="450dp" android:layout_y="250dp">
			    </Button>
			    

 		</AbsoluteLayout>
 </FrameLayout>
 </AbsoluteLayout>  