<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:lht="http://schemas.android.com/apk/res/br.com.thelastsurvivor"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
<br.com.thelastsurvivor.view.BackgroundView
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:id="@+id/surfaceView" /> 
					  
<FrameLayout android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    
           <AbsoluteLayout 
    			android:orientation="vertical"
    			android:layout_width="fill_parent"
    			android:layout_height="fill_parent">
    		
    			<br.com.thelastsurvivor.util.FT2FontTextView 
						android:id="@+id/app_name" android:text="@string/app_name" 
						android:textSize="22dp" android:textColor="@android:color/white"
						android:layout_width="fill_parent" android:layout_height="wrap_content" lht:ttf_name="FT2FONT.TTF"
						android:layout_x="3dp" android:layout_y="10dp">
			 	</br.com.thelastsurvivor.util.FT2FontTextView>
			 	<br.com.thelastsurvivor.util.FT2FontTextView 
						android:id="@+id/app_name" android:text="@string/color" 
						android:textSize="16dp" android:textColor="#4ed3ff"
						android:layout_width="fill_parent" android:layout_height="wrap_content" lht:ttf_name="FT2FONT.TTF"
						android:layout_x="385dp" android:layout_y="15dp">
			 	</br.com.thelastsurvivor.util.FT2FontTextView>
    		
				
				<Button android:id="@+id/buttonRed" 
        				android:background="@drawable/rect_red_image"
        		        android:layout_height="wrap_content" android:layout_width="wrap_content" 
        		        android:layout_x="50dp" android:layout_y="90dp">
        	    </Button> 
        	    <Button android:id="@+id/buttonBlue" 
        				android:background="@drawable/rect_blue_image"
        		        android:layout_height="wrap_content" android:layout_width="wrap_content" 
        		        android:layout_x="150dp" android:layout_y="90dp">
        	    </Button> 
        	    <Button android:id="@+id/buttonYellow" 
        				android:background="@drawable/rect_yellow_image"
        		        android:layout_height="wrap_content" android:layout_width="wrap_content" 
        		        android:layout_x="250dp" android:layout_y="90dp">
        	    </Button> 
        	    <Button android:id="@+id/buttonGreen" 
        				android:background="@drawable/rect_green_image"
        		        android:layout_height="wrap_content" android:layout_width="wrap_content" 
        		        android:layout_x="350dp" android:layout_y="90dp">
        	    </Button> 
			 	
				
				

 		</AbsoluteLayout>
 </FrameLayout>
 </AbsoluteLayout>  