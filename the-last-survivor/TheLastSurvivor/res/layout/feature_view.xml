<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:lht="http://schemas.android.com/apk/res/br.com.thelastsurvivor"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
 
 <br.com.thelastsurvivor.view.BackgroundView
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:id="@+id/surfaceView" /> 
					
<FrameLayout android:layout_width="fill_parent"
    android:layout_height="wrap_content">
   
           <AbsoluteLayout 
    			android:orientation="vertical"
    			android:layout_width="fill_parent"
    			android:layout_height="fill_parent">
    		
    			<ImageView android:id="@+id/imageView1"
    	 			android:layout_width="fill_parent" 
    	 			android:layout_height="wrap_content" 
    	 			android:src="@drawable/rect_title_image"
    	 			android:layout_x="0dp" android:layout_y="25dp">
				</ImageView>
				
				<br.com.thelastsurvivor.util.FT2FontTextView 
						android:id="@+id/app_name" android:text="@string/color" 
						android:textSize="29dp" android:textColor="@android:color/white"
						android:layout_width="fill_parent" android:layout_height="wrap_content" lht:ttf_name="FT2FONT.TTF"
						android:layout_x="25dp" android:layout_y="31dp">
			 	</br.com.thelastsurvivor.util.FT2FontTextView>
				
				<Button android:id="@+id/buttonRed" 
        				android:background="@drawable/rect_red_image"
        		        android:layout_height="wrap_content" android:layout_width="wrap_content" 
        		        android:layout_x="11dp" android:layout_y="121dp">
        	    </Button> 
        	    <Button android:id="@+id/buttonBlue" 
        				android:background="@drawable/rect_blue_image"
        		        android:layout_height="wrap_content" android:layout_width="wrap_content" 
        		        android:layout_x="125dp" android:layout_y="121dp">
        	    </Button> 
        	    <Button android:id="@+id/buttonYellow" 
        				android:background="@drawable/rect_yellow_image"
        		        android:layout_height="wrap_content" android:layout_width="wrap_content" 
        		        android:layout_x="243dp" android:layout_y="121dp">
        	    </Button> 
        	    <Button android:id="@+id/buttonGreen" 
        				android:background="@drawable/rect_green_image"
        		        android:layout_height="wrap_content" android:layout_width="wrap_content" 
        		        android:layout_x="359dp" android:layout_y="121dp">
        	    </Button> 
			 	
				
				

 		</AbsoluteLayout>
 </FrameLayout>
 </AbsoluteLayout>  