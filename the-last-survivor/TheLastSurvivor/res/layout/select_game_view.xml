<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:lht="http://schemas.android.com/apk/res/br.com.thelastsurvivor"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

		<ImageView android:id="@+id/imagebackgraund"
  	 			android:layout_width="fill_parent" 
  	 			android:layout_height="wrap_content" 
  	 			android:src="@drawable/rect_black_image"
  	 			android:layout_x="0dp" android:layout_y="0dp">
		</ImageView>
			
	    <Button android:layout_height="wrap_content"  
	      		android:layout_width="wrap_content"
	      		android:id="@+id/button_back"
	      		android:background="@drawable/back_to_list_button_image" 
	      		android:layout_x="90dp" android:layout_y="40dp">
	    </Button>
	    <Button android:layout_height="wrap_content"  
	      		android:layout_width="wrap_content"
	      		android:id="@+id/button_open_game"
	      		android:background="@drawable/open_game_button_image" 
	      		android:layout_x="180dp" android:layout_y="40dp">
	    </Button>
	    <Button android:layout_height="wrap_content" 
	      		android:layout_width="wrap_content"
	      		android:id="@+id/button_remove"
	      		android:background="@drawable/remove_game_button_image" 
	      		android:layout_x="270dp" android:layout_y="40dp">
	    </Button>

 </AbsoluteLayout>  