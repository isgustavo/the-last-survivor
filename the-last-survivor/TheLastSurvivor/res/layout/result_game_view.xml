<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:lht="http://schemas.android.com/apk/res/br.com.thelastsurvivor"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
 
 <br.com.thelastsurvivor.view.BackgroundView
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:id="@+id/surfaceView" /> 
					    
<FrameLayout android:layout_width="fill_parent"
    android:layout_height="wrap_content">
   
           <AbsoluteLayout 
    			android:orientation="vertical"
    			android:layout_width="fill_parent"
    			android:layout_height="fill_parent">
    		
    			<ImageView android:id="@+id/imageView1"
    	 			android:layout_width="fill_parent" 
    	 			android:layout_height="wrap_content" 
    	 			android:src="@drawable/rect_title_image"
    	 			android:layout_x="-100dp" android:layout_y="25dp">
				</ImageView>
				
				<br.com.thelastsurvivor.util.FT2FontTextView 
						android:id="@+id/app_name" android:text="@string/result" 
						android:textSize="29dp" android:textColor="@android:color/white"
						android:layout_width="fill_parent" android:layout_height="wrap_content" lht:ttf_name="FT2FONT.TTF"
						android:layout_x="135dp" android:layout_y="31dp">
			 	</br.com.thelastsurvivor.util.FT2FontTextView>
				
				<ImageView android:src="@drawable/rect_rank_orange_image" 
					android:id="@+id/image1" android:layout_height="wrap_content" android:layout_width="fill_parent" 
					android:layout_x="100dp" android:layout_y="88dp">
				</ImageView>
			 	
			 	<br.com.thelastsurvivor.util.FT2FontTextView 
						android:id="@+id/result_score1" android:text="@string/result_score" 
						android:textSize="20dp" android:textColor="@android:color/white"
						android:layout_width="fill_parent" android:layout_height="wrap_content" 
						lht:ttf_name="FT2FONT.TTF"
						android:layout_x="260dp" android:layout_y="103dp">
			 	</br.com.thelastsurvivor.util.FT2FontTextView>
			 	<br.com.thelastsurvivor.util.FT2FontTextView 
						android:id="@+id/result_score" 
						android:textSize="20dp" android:textColor="@android:color/white"
						android:layout_width="fill_parent" android:layout_height="wrap_content" 
						lht:ttf_name="FT2FONT.TTF"
						android:layout_x="360dp" android:layout_y="103dp">
			 	</br.com.thelastsurvivor.util.FT2FontTextView>
			 	
			 	
			 	<ImageView android:src="@drawable/rect_title_blue_big_image" 
					android:id="@+id/image1" android:layout_height="wrap_content" android:layout_width="fill_parent" 
					android:layout_x="20dp" android:layout_y="173dp">
				</ImageView>
			 	
				<Button android:layout_height="wrap_content"  
	      			android:layout_width="wrap_content"
	      			android:id="@+id/button_twitte"
	      			android:background="@drawable/twitter_button_image" 
	      			android:layout_x="400dp" android:layout_y="169dp">
	    		</Button>
	    		
	    	

	    		<br.com.thelastsurvivor.util.FT2FontTextView 
						android:id="@+id/text_twitte" android:inputType="textMultiLine"
						android:textSize="15dp" android:textColor="@android:color/white"
						android:lines="8" android:gravity="top|left"
						android:scrollHorizontally="false"
						android:maxWidth="390.0dip"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						lht:ttf_name="FT2FONT.TTF"
						android:layout_x="25dp" android:layout_y="178dp">
			 	</br.com.thelastsurvivor.util.FT2FontTextView>
			 	
      </AbsoluteLayout>  
 </FrameLayout> 
</AbsoluteLayout>
				