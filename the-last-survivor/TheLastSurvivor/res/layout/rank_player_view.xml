<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:lht="http://schemas.android.com/apk/res/br.com.thelastsurvivor"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
 
 <br.com.thelastsurvivor.view.BackgroundView
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:id="@+id/surfaceView" /> 
					
<FrameLayout android:layout_width="fill_parent"
    android:layout_height="wrap_content">
   
           <AbsoluteLayout 
    			android:orientation="vertical"
    			android:layout_width="fill_parent"
    			android:layout_height="fill_parent">
    		
    			<ImageView android:id="@+id/imageView1"
    	 			android:layout_width="fill_parent" 
    	 			android:layout_height="wrap_content" 
    	 			android:src="@drawable/rect_title_image"
    	 			android:layout_x="-100dp" android:layout_y="25dp">
				</ImageView>
				
				<br.com.thelastsurvivor.util.FT2FontTextView 
						android:id="@+id/app_name" android:text="@string/rank" 
						android:textSize="29dp" android:textColor="@android:color/white"
						android:layout_width="fill_parent" android:layout_height="wrap_content" lht:ttf_name="FT2FONT.TTF"
						android:layout_x="110dp" android:layout_y="31dp">
			 	</br.com.thelastsurvivor.util.FT2FontTextView>
			 	
			 	<ListView android:layout_width="fill_parent" 
					android:layout_height="wrap_content" 
					android:id="@android:id/list"
					android:layout_x="30dp" android:layout_y="90dp">
				</ListView> 
				
		</AbsoluteLayout>
</FrameLayout>
</AbsoluteLayout>


