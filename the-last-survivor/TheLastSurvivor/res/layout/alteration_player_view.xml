<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:lht="http://schemas.android.com/apk/res/br.com.thelastsurvivor"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
 
 <br.com.thelastsurvivor.view.BackgroundView
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:id="@+id/surfaceView" /> 
					
<HorizontalScrollView android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:scrollbars="none">

     
<FrameLayout android:layout_width="fill_parent"
    android:layout_height="wrap_content">


           <AbsoluteLayout 
    			android:orientation="vertical"
    			android:layout_width="fill_parent"
    			android:layout_height="fill_parent">
    			
    		
    			<ImageView android:id="@+id/imageView1"
    	 			android:layout_width="fill_parent" 
    	 			android:layout_height="wrap_content" 
    	 			android:src="@drawable/rect_title_image"
    	 			android:layout_x="0dp" android:layout_y="25dp">
				</ImageView>
				
				<ImageView android:id="@+id/imageView1"
    	 			android:layout_width="fill_parent" 
    	 			android:layout_height="fill_parent" 
    	 			android:src="@drawable/rect_title_blue_image"
    	 			android:layout_x="55dp" android:layout_y="101dp">
				</ImageView>
    		
				
				<br.com.thelastsurvivor.util.FT2FontTextView 
						android:id="@+id/app_name" android:text="@string/profile" 
						android:textSize="29dp" android:textColor="@android:color/white"
						android:layout_width="fill_parent" android:layout_height="wrap_content" lht:ttf_name="FT2FONT.TTF"
						android:layout_x="143dp" android:layout_y="31dp">
			 	</br.com.thelastsurvivor.util.FT2FontTextView>
			 	
			 	
				
				<br.com.thelastsurvivor.util.FT2FontTextView 
						android:id="@+id/app_name" android:text="@string/alteration_palyer_1" 
						android:textSize="16dp" android:textColor="@android:color/white"
						android:layout_width="fill_parent" android:layout_height="wrap_content" lht:ttf_name="FT2FONT.TTF"
					    android:layout_x="93dp" android:layout_y="120dp">
			 	</br.com.thelastsurvivor.util.FT2FontTextView>
			 	<br.com.thelastsurvivor.util.FT2FontTextView 
						android:id="@+id/app_name" android:text="@string/alteration_palyer_2" 
						android:textSize="16dp" android:textColor="@android:color/white"
						android:layout_width="fill_parent" android:layout_height="wrap_content" lht:ttf_name="FT2FONT.TTF"
						android:layout_x="93dp" android:layout_y="140dp">
			 	</br.com.thelastsurvivor.util.FT2FontTextView>
			 
				<EditText android:layout_height="50dp" android:layout_width="200dp" 
				          android:textSize="23dp"
				           android:id="@+id/editNickName" 
				          android:inputType="textPersonName" 
				          android:layout_x="65dp" android:layout_y="217dp">
				</EditText>
				
				
				<Button android:layout_height="wrap_content" 
			      		android:layout_width="wrap_content"
			      		android:background="@drawable/button_left_ok_image" 
			      		android:id="@+id/buttonOk"
			      		android:layout_x="280dp" android:layout_y="210dp">
			    </Button>
			    
			    <Button android:layout_height="wrap_content" 
			      		android:layout_width="wrap_content"
			      		android:background="@drawable/remove_profile_button_image" 
			      		android:id="@+id/buttonRemove"
			      		android:layout_x="380dp" android:layout_y="210dp">
			    </Button>
			    
 	 </AbsoluteLayout>  
 </FrameLayout> 
</HorizontalScrollView>

</AbsoluteLayout>
